package SDE.Enumerador
{
    public final class EVeiculoEspecie
    {
        public static function getCampos():Array{return['carga','corrida','especial','misto','passsageiro','tracao']};
        
        public static const carga:String = 'carga';
        public static const corrida:String = 'corrida';
        public static const especial:String = 'especial';
        public static const misto:String = 'misto';
        public static const passsageiro:String = 'passsageiro';
        public static const tracao:String = 'tracao';
        
        public static function valida(value:String):Boolean
        {
            return (getCampos().indexOf(value)>-1);
        }
    }
}
