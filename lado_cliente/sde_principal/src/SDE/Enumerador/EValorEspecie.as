package SDE.Enumerador
{
    public final class EValorEspecie
    {
        public static function getCampos():Array{return['nao_informado','dinheiro','cheque_a_vista','cheque_pre','cartao_credito','prazo','cartao_debito','convenio','financeira','reserva','transferencia','haver']};
        
        public static const nao_informado:String = 'nao_informado';
        public static const dinheiro:String = 'dinheiro';
        public static const cheque_a_vista:String = 'cheque_a_vista';
        public static const cheque_pre:String = 'cheque_pre';
        public static const cartao_credito:String = 'cartao_credito';
        public static const prazo:String = 'prazo';
        public static const cartao_debito:String = 'cartao_debito';
        public static const convenio:String = 'convenio';
        public static const financeira:String = 'financeira';
        public static const reserva:String = 'reserva';
        public static const transferencia:String = 'transferencia';
        public static const haver:String = 'haver';
        
        public static function valida(value:String):Boolean
        {
            return (getCampos().indexOf(value)>-1);
        }
    }
}
